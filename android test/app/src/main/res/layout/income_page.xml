<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/linechartincome"
            android:layout_width="match_parent"
            android:layout_height="150dp"></com.github.mikephil.charting.charts.LineChart>

        <LinearLayout
            android:padding="20dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout

                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:paddingLeft="20dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_edittext_info"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:background="@drawable/custom_btn_income"
                    android:src="@drawable/ic_format_indent_increase_black_24dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
                <ImageButton
                    android:id="@+id/imageButton2"
                    android:background="@drawable/custom_btn_income"
                    android:src="@drawable/ic_sync_black_24dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>
            <LinearLayout

                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:paddingLeft="20dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_edittext_info"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:background="@drawable/custom_btn_income"
                    android:src="@drawable/ic_format_indent_increase_black_24dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:background="@drawable/custom_btn_income"
                    android:src="@drawable/ic_sync_black_24dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:paddingLeft="20dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:background="@drawable/custom_edittext_info"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:background="@drawable/custom_btn_income"
                    android:src="@drawable/ic_business_center_black_24dp"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/ListChoose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>