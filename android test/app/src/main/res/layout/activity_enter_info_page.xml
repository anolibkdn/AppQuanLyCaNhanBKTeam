<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnterInfoPage">

    <LinearLayout
        android:background="@drawable/custom_signup_linear"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/colorBlue1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <FrameLayout
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="110dp"
                android:layout_height="110dp">

                <ImageView
                    android:src="@drawable/profile_pic"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

                <ImageView
                    android:background="@drawable/custom_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
            <TextView
                android:textSize="18dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Anna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">



            <Button
                android:textColor="@color/colorWhite"
                android:text="Save"
                android:layout_margin="2dp"
                android:background="@color/colorYellow"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

            <Button
                android:textColor="@color/colorWhite"
                android:text="Iamge"
                android:layout_margin="2dp"
                android:background="@color/colorGreen1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_back_profile"
                android:textColor="@color/colorWhite"
                android:text="Back"
                android:layout_margin="2dp"
                android:background="@color/colorBlue2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:layout_weight="3"
                    android:src="@drawable/ic_person_pin_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <EditText
                    android:paddingLeft="10dp"
                    android:textSize="13dp"
                    android:hint="Nicoly Anan"
                    android:background="@drawable/custom_edittext_info"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:layout_weight="3"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <EditText
                    android:paddingLeft="10dp"
                    android:textSize="13dp"
                    android:hint="Manchester Unite- England"
                    android:background="@drawable/custom_edittext_info"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:layout_weight="3"
                    android:src="@drawable/ic_assignment_ind_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <EditText
                    android:paddingLeft="10dp"
                    android:textSize="13dp"
                    android:hint="ID: 1234425234"
                    android:background="@drawable/custom_edittext_info"

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:layout_weight="3"
                    android:src="@drawable/ic_phone_paused_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <EditText
                    android:paddingLeft="10dp"
                    android:textSize="13dp"
                    android:hint="+89 234234242"
                    android:background="@drawable/custom_edittext_info"

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:layout_weight="3"
                    android:src="@drawable/ic_cake_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <EditText
                    android:paddingLeft="10dp"
                    android:textSize="13dp"
                    android:hint="20/10/2018"
                    android:background="@drawable/custom_edittext_info"

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="2dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <ImageView
                    android:layout_weight="3"
                    android:src="@drawable/ic_business_center_black_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <EditText
                    android:paddingLeft="10dp"
                    android:textSize="13dp"
                    android:hint="Your Job"
                    android:background="@drawable/custom_edittext_info"

                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>